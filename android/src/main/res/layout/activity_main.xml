<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 主界面内容 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0F172A">

        <!-- 顶部工具栏 -->
        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingHorizontal="16dp"
            android:background="#1E293B">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="AcousticGuard PRO"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_history"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_recent_history"
                android:contentDescription="History" />
        </RelativeLayout>

        <!-- 仪表盘 -->
        <LinearLayout
            android:id="@+id/meter_container"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/toolbar"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="#22C55E"
                android:textSize="72sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="READY"
                android:textColor="#64748B"
                android:textSize="12sp"
                android:letterSpacing="0.2" />
        </LinearLayout>

        <!-- 交互波形图 -->
        <com.acousticguard.app.WaveformView
            android:id="@+id/waveform_view"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/meter_container"
            android:layout_margin="16dp"
            android:background="#1E293B" />

        <!-- 播放进度条 -->
        <SeekBar
            android:id="@+id/playback_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/waveform_view"
            android:layout_marginHorizontal="16dp"
            android:visibility="gone"
            android:progressTint="#3B82F6"
            android:thumbTint="#3B82F6" />

        <!-- 当前录音/播放的节点列表 -->
        <TextView
            android:id="@+id/txt_event_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playback_seekbar"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="DETECTION NODES"
            android:textColor="#94A3B8"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/node_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_controls"
            android:layout_below="@id/txt_event_header"
            android:layout_margin="16dp"
            android:divider="#334155"
            android:dividerHeight="0.5dp" />

        <!-- 底部控制按钮 -->
        <LinearLayout
            android:id="@+id/bottom_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#0F172A">
            <ImageButton
                android:id="@+id/btn_record"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/circle_btn_bg"
                android:src="@android:drawable/ic_btn_speak_now"
                android:scaleType="centerInside" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 右侧历史记录抽屉 -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#1E293B"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="HISTORY RECORDS"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/history_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#334155"
            android:dividerHeight="1dp" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>